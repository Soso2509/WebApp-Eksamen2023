generator client {
  provider = "prisma-client-js"
}

datasource db {  
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String   @id @default(uuid())
  gender      String
  sport       String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  meta        Meta[]
  activities  Activities[]
}

model Meta {
  id         String   @id @default(uuid())
  heartrate  Int
  watt       Int
  speed      Int
  userId     String
  user       User   @relation(fields: [userId], references: [id])
}
  
model Activities {
  id        String  @id @default(uuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name       String?
  tags       String?
  userId     String
  questions  Questions[]
  intervals  Intervals[]
  user       User       @relation(fields: [userId], references: [id])
}

model Questions {
  id        String  @id @default(uuid())
  question   String
  type       String
  activitiesId String
  activities Activities @relation(fields: [activitiesId], references: [id])
}
            
model Intervals {
  id         String   @id @default(uuid())
  duration   Int
  intensity  Int
  activitiesId String
  activities Activities @relation(fields: [activitiesId], references: [id])
}
        