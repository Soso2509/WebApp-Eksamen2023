generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "webapp-api.vercel.app"
  url      = "https://webapp-api.vercel.app/api/users"
}

model User {
  id          String   @id @default(uuid())
  firstName   String   @db.VarChar(200)
  lastName    String   @db.VarChar(200)
  gender      String
  sport       String
  meta        Meta[]
  activities  Activities[]
}

model Meta {
  heartrate  Number
  watt       Number
  speed      Number
}
  
model Activities {
  createdAt  DateTime   @db.Date
  goalId     String?     @id @default(uuid())
  name       String?
  tags       String?
  questions  Questions[]
  intervals  Intervals[]
}

model Questions {
  id         String   @id @default(uuid())
  question   String
  type       String
}
            
model Intervals {
  id         String   @id @default(uuid())
  duration   Number
  intensity  Number
}
        